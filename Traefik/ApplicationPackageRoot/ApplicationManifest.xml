<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="Traefik" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="Traefik_InstanceCount" DefaultValue="-1" />
    <Parameter Name="Traefik_Port" DefaultValue="19180" />
    <Parameter Name="Traefik_ApiPort" DefaultValue="19188" />
    <Parameter Name="Traefik.FabricApi_Port" DefaultValue="19181" />
    <Parameter Name="Traefik.Watchdog_Port" DefaultValue="19182" />
    <Parameter Name="Traefik.Watchdog_PollIntervalSec" DefaultValue="60" />
    <Parameter Name="Traefik.Watchdog_AppInsightsKey" DefaultValue="__APIKEY__" />
  </Parameters>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Traefik" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <ResourceOverrides>
      <Endpoints>
        <Endpoint Name="TraefikEndpoint" Port="[Traefik_Port]" />
        <Endpoint Name="TraefikApiEndpoint" Port="[Traefik_ApiPort]" />
      </Endpoints>
    </ResourceOverrides>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Traefik.FabricApi" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <ResourceOverrides>
      <Endpoints>
        <Endpoint Name="ServiceEndpoint" Port="[Traefik.FabricApi_Port]" />
      </Endpoints>
    </ResourceOverrides>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Traefik.Watchdog" ServiceManifestVersion="1.0.0" />
    <ResourceOverrides>
      <Endpoints>
        <Endpoint Name="ServiceEndpoint" Port="[Traefik.Watchdog_Port]" />
      </Endpoints>
    </ResourceOverrides>
    <EnvironmentOverrides CodePackageRef="Code">
      <EnvironmentVariable Name="TraefikPort" Value="[Traefik_Port]" />
      <EnvironmentVariable Name="TraefikApiPort" Value="[Traefik_ApiPort]" />
      <EnvironmentVariable Name="PollIntervalSec" Value="[Traefik.Watchdog_PollIntervalSec]" />
      <EnvironmentVariable Name="AppInsightsKey" Value="[Traefik.Watchdog_AppInsightsKey]" />
    </EnvironmentOverrides>
  </ServiceManifestImport>
  <DefaultServices>
    <Service Name="Traefik" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Traefik" InstanceCount="[Traefik_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="FabricApi" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Traefik.FabricApi" InstanceCount="[Traefik_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="Watchdog" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Traefik.Watchdog" InstanceCount="[Traefik_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
</ApplicationManifest>