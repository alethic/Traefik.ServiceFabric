<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="Traefik" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="Traefik.FabricApi_ASPNETCORE_ENVIRONMENT" DefaultValue="" />
    <Parameter Name="Traefik.FabricApi_InstanceCount" DefaultValue="-1" />
    <Parameter Name="Traefik_InstanceCount" DefaultValue="-1" />
    <Parameter Name="Traefik_Port" DefaultValue="19180" />
    <Parameter Name="Traefik_ApiPort" DefaultValue="19188" />
    <Parameter Name="Traefik.FabricApi_Port" DefaultValue="19181" />
    <Parameter Name="Watchdog_PollIntervalSec" DefaultValue="60" />
    <Parameter Name="Watchdog_AppInsightsKey" DefaultValue="__APIKEY__" />
  </Parameters>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Traefik" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <ResourceOverrides>
      <Endpoints>
        <Endpoint Name="TraefikEndpoint" Port="[Traefik_Port]" />
        <Endpoint Name="TraefikAPIEndpoint" Port="[Traefik_ApiPort]" />
      </Endpoints>
    </ResourceOverrides>
    <Policies>
      <RunAsPolicy CodePackageRef="Code" UserRef="User" EntryPointType="All" />
    </Policies>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Traefik.FabricApi" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <ResourceOverrides>
      <Endpoints>
        <Endpoint Name="ServiceEndpoint" Port="[Traefik.FabricApi_Port]" />
      </Endpoints>
    </ResourceOverrides>
    <EnvironmentOverrides CodePackageRef="code">
      <EnvironmentVariable Name="ASPNETCORE_ENVIRONMENT" Value="[Traefik.FabricApi_ASPNETCORE_ENVIRONMENT]" />
    </EnvironmentOverrides>
    <Policies>
      <RunAsPolicy CodePackageRef="Code" UserRef="User" EntryPointType="All" />
    </Policies>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Watchdog" ServiceManifestVersion="1.0.0" />
    <EnvironmentOverrides CodePackageRef="Code">
      <EnvironmentVariable Name="TraefikPort" Value="[Traefik_Port]" />
      <EnvironmentVariable Name="TraefikApiPort" Value="[Traefik_ApiPort]" />
      <EnvironmentVariable Name="PollIntervalSec" Value="[Watchdog_PollIntervalSec]" />
      <EnvironmentVariable Name="AppInsightsKey" Value="[Watchdog_AppInsightsKey]" />
    </EnvironmentOverrides>
    <Policies>
      <RunAsPolicy CodePackageRef="Code" UserRef="User" EntryPointType="All" />
    </Policies>
  </ServiceManifestImport>
  <DefaultServices>
    <Service Name="Traefik" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Traefik" InstanceCount="[Traefik_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="Watchdog" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Watchdog" InstanceCount="[Traefik_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="Traefik.FabricApi" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Traefik.FabricApi" InstanceCount="[Traefik.FabricApi_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
  <Principals>
    <Users>
      <User Name="User" />
    </Users>
  </Principals>
</ApplicationManifest>